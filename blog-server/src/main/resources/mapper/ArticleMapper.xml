<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zheng.blogserver.mapper.ArticleMapper">
    <select id="queryArticleForId" resultType="article">
        select *
        from zj_articles
        where article_id = #{article_id}
  </select>
</mapper>