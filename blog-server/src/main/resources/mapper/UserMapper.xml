<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zheng.blogserver.mapper.UserMapper">
    <select id="queryForId" resultType="user">
        select *
        from blog_system.zj_users
        where user_id = #{user_id}
  </select>

</mapper>